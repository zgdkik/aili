<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC   
    "-//mybatis.org//DTD Mapper 3.0//EN"  
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--这块等于dao接口的实现 namespace必须和接口的类路径一样 -->
<mapper namespace="com.yimidida.ymdp.dao.test.server.dao.IUserDao">
	<resultMap type="com.yimidida.ymdp.dao.test.server.UserInfo1" id="u1">
		<result column="" property=""/>
	</resultMap>
	<!-- findById必须和接口中的方法名一样 返回一个User 就是刚才的别名 如果不弄别名要连类路径一起写 麻烦 -->
	<select id="getCustomPagination" parameterType="HashMap"
		resultType="com.yimidida.ymdp.dao.test.server.UserInfo1">
		select* from t_aili_user where name= #{name}
		<!--  数字时 只判断非空-->
		<if test="status!=null" >
			and status =  #{status}
		</if>
	</select>
</mapper>  